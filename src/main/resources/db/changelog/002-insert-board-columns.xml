<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="004-insert-board-columns" author="ihorkr">
        <insert tableName="board_column">
            <column name="id" value="1"/>
            <column name="name" value="To Do"/>
            <column name="slug" value="todo"/>
            <column name="hex_color" value="#FF5733"/>
            <column name="active" valueBoolean="true"/>
            <column name="position" value="0"/>
        </insert>
        <insert tableName="board_column">
            <column name="id" value="2"/>
            <column name="name" value="In Progress"/>
            <column name="slug" value="inprogress"/>
            <column name="hex_color" value="#33C4FF"/>
            <column name="active" valueBoolean="true"/>
            <column name="position" value="1"/>
        </insert>
        <insert tableName="board_column">
            <column name="id" value="3"/>
            <column name="name" value="Review"/>
            <column name="slug" value="review"/>
            <column name="hex_color" value="#FFC300"/>
            <column name="active" valueBoolean="true"/>
            <column name="position" value="2"/>
        </insert>
        <insert tableName="board_column">
            <column name="id" value="4"/>
            <column name="name" value="QA"/>
            <column name="slug" value="qa"/>
            <column name="hex_color" value="#33FF57"/>
            <column name="active" valueBoolean="true"/>
            <column name="position" value="3"/>
        </insert>
        <insert tableName="board_column">
            <column name="id" value="5"/>
            <column name="name" value="Done"/>
            <column name="slug" value="done"/>
            <column name="hex_color" value="#A9A9A9"/>
            <column name="active" valueBoolean="false"/>
            <column name="position" value="4"/>
        </insert>
    </changeSet>
</databaseChangeLog>